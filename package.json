{
  "name": "js13k-starter",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "zip:watch": "chokidar src -c 'bun run build && bun run zip'",
    "zip": "rimraf out.zip && cd dist && zip -9 -r ../out.zip .",
    "postzip": "bun run scripts/postbuild.ts",
    "build": "vite build && bun run zip",
    "preview": "bun run build && vite preview",
    "deploy": "bun run build && wrangler deploy",
    "prebuild": "bun scripts/prebuild.ts",
    "analyze": "vite-bundle-visualizer"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.6.0",
    "@tsconfig/node16": "^16.1.4",
    "@types/node": "^24.0.1",
    "chokidar-cli": "^3.0.0",
    "http-server": "^14.1.1",
    "nanoid": "^5.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "sass": "^1.89.2",
    "terser": "^5.42.0",
    "tslib": "^2.8.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vanjs-core": "^1.5.5",
    "vite": "^6.3.5",
    "vite-bundle-visualizer": "^1.2.1",
    "wrangler": "^4.20.0",
    "vanjs-routing": "^1.1.4"
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "printWidth": 120,
    "tabWidth": 2,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
