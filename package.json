{
  "name": "js13k-starter",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "size": "((rm -rf .build/*) || true) && vite build --outDir .build && ((rm out.zip) || true) && (cd .build && zip -9 -r ../out.zip .) && ./checksize.sh",
    "size:watch": "chokidar src *.json *.html *.ts -c 'bun size'",
    "build": "(bun size) && (rm -rf dist || true) && (mkdir dist) && (cp -r .build/* dist)",
    "prebuild": "bun scripts/prebuild.ts",
    "postbuild": "bun scripts/postbuild.ts",
    "preview": "vite preview",
    "analyze": "vite-bundle-visualizer"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.4",
    "@types/node": "^24.0.1",
    "chokidar-cli": "^3.0.0",
    "http-server": "^14.1.1",
    "nanoid": "^5.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "sass": "^1.89.2",
    "terser": "^5.42.0",
    "tslib": "^2.8.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vanjs-core": "^1.5.5",
    "vite": "^6.3.5",
    "vite-bundle-visualizer": "^1.2.1"
  }
}
